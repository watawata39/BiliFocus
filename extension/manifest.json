{
  "manifest_version": 3,
  "name": "BiliFocus",
  "version": "2.0.0",
  "description": "Use bilibili.com without the bloody distractions that destroys your focus.",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["*://*.bilibili.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/logo16.png",
    "32": "icons/logo32.png",
    "48": "icons/logo48.png",
    "128": "icons/logo128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "bilifocus@watawata39.github.io",
      "strict_min_version": "109.0"
    }
  }
}